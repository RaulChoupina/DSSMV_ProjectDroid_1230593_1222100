<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:padding="20dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:id="@+id/tvTitleAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/edtLibraryId"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/hint_library_id"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tvTitleAdmin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/edtIsbn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/hint_isbn"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/edtLibraryId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

    <EditText
            android:id="@+id/edtStock"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/hint_stock"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/edtIsbn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

    <Button
            android:id="@+id/btnAddOrUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_update"
            app:layout_constraintTop_toBottomOf="@id/edtStock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"/>

    <Button
            android:id="@+id/btnRetirar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_remove"
            app:layout_constraintTop_toBottomOf="@id/btnAddOrUpdate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
